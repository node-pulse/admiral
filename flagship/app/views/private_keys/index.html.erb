<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">SSH Private Keys</h1>
    <%= link_to "Add SSH Key", new_private_key_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @private_keys.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fingerprint</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Servers</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @private_keys.each do |key| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to key.name, private_key_path(key), class: "text-blue-600 hover:text-blue-900 font-medium" %>
              </td>
              <td class="px-6 py-4">
                <span class="text-gray-700"><%= key.description || '-' %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <code class="text-xs bg-gray-100 px-2 py-1 rounded"><%= key.short_fingerprint %></code>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                  <%= key.servers_count %> servers
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(key.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View", private_key_path(key), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <% unless key.in_use? %>
                  <%= button_to "Delete", private_key_path(key), method: :delete,
                      data: { confirm: "Are you sure you want to delete this SSH key?" },
                      class: "text-red-600 hover:text-red-900" %>
                <% else %>
                  <span class="text-gray-400" title="Cannot delete: key is in use">Delete</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow-md rounded-lg p-8 text-center">
      <p class="text-gray-600 mb-4">No SSH keys configured yet.</p>
      <%= link_to "Add your first SSH key", new_private_key_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
