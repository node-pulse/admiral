<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @private_key.name %></h1>
    <%= link_to "Back to Keys", private_keys_path, class: "text-blue-600 hover:text-blue-900" %>
  </div>

  <% if flash[:notice] %>
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <h2 class="text-xl font-bold mb-4">Key Details</h2>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2">Name</label>
      <p class="text-gray-900"><%= @private_key.name %></p>
    </div>

    <% if @private_key.description.present? %>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Description</label>
        <p class="text-gray-900"><%= @private_key.description %></p>
      </div>
    <% end %>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2">Fingerprint</label>
      <code class="bg-gray-100 px-3 py-2 rounded text-sm"><%= @private_key.fingerprint %></code>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2">Created</label>
      <p class="text-gray-900"><%= @private_key.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2">Servers Using This Key</label>
      <p class="text-gray-900"><%= @private_key.servers_count %> server(s)</p>
    </div>
  </div>

  <div class="bg-yellow-50 border-l-4 border-yellow-500 p-6 mb-6">
    <h2 class="text-xl font-bold mb-4">Public Key</h2>
    <p class="text-sm text-gray-700 mb-4">
      Copy this public key and add it to the <code class="bg-gray-200 px-1">~/.ssh/authorized_keys</code> file on your target servers:
    </p>

    <div class="bg-white p-4 rounded border border-gray-300 mb-4">
      <pre class="text-xs font-mono overflow-x-auto whitespace-pre-wrap break-all"><%= @private_key.public_key %></pre>
    </div>

    <button onclick="copyPublicKey()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Copy to Clipboard
    </button>
    <span id="copy-feedback" class="ml-2 text-green-600 font-semibold" style="display: none;">Copied!</span>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <h2 class="text-xl font-bold mb-4">Servers Using This Key</h2>

    <% if @servers.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Server</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SSH Host</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @servers.each do |server| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to server.name || server.hostname, server_path(server), class: "text-blue-600 hover:text-blue-900" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <code class="text-sm"><%= server.ssh_username %>@<%= server.ssh_host %></code>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if server.is_reachable %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Connected
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                    Not Connected
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View", server_path(server), class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-600">No servers are using this key yet.</p>
    <% end %>
  </div>

  <div class="flex items-center justify-between">
    <%= link_to "Back to Keys", private_keys_path, class: "text-blue-600 hover:text-blue-900" %>

    <% unless @private_key.in_use? %>
      <%= button_to "Delete Key", private_key_path(@private_key), method: :delete,
          data: { confirm: "Are you sure you want to delete this SSH key?" },
          class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>
</div>

<script>
  function copyPublicKey() {
    const publicKey = `<%= j @private_key.public_key %>`;
    navigator.clipboard.writeText(publicKey).then(() => {
      const feedback = document.getElementById('copy-feedback');
      feedback.style.display = 'inline';
      setTimeout(() => {
        feedback.style.display = 'none';
      }, 2000);
    });
  }
</script>
