<% content_for :page_title, @server.hostname %>

<div class="mb-6">
  <%= link_to "← Back to Servers", servers_path, class: "text-blue-600 hover:text-blue-800" %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">Server Information</h3>
    <dl class="space-y-3">
      <div>
        <dt class="text-sm text-gray-600">Server ID</dt>
        <dd class="font-mono text-xs text-gray-900"><%= @server.server_id %></dd>
      </div>
      <div>
        <dt class="text-sm text-gray-600">Status</dt>
        <dd><%= status_badge(@server.status) %></dd>
      </div>
      <div>
        <dt class="text-sm text-gray-600">Hostname</dt>
        <dd class="font-medium"><%= @server.hostname %></dd>
      </div>
      <div>
        <dt class="text-sm text-gray-600">Last Seen</dt>
        <dd><%= @server.last_seen_at ? "#{time_ago_in_words(@server.last_seen_at)} ago" : "Never" %></dd>
      </div>
      <% if @server.distro %>
        <div>
          <dt class="text-sm text-gray-600">OS</dt>
          <dd><%= @server.distro %> <%= @server.distro_version %></dd>
        </div>
      <% end %>
      <% if @server.cpu_cores %>
        <div>
          <dt class="text-sm text-gray-600">CPU Cores</dt>
          <dd><%= @server.cpu_cores %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <% if @latest_metric %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">CPU Usage</h3>
      <p class="text-4xl font-bold text-blue-600"><%= number_to_percentage(@latest_metric.cpu_usage_percent, precision: 1) %></p>
      <p class="text-sm text-gray-500 mt-2">Current</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">Memory Usage</h3>
      <p class="text-4xl font-bold text-green-600"><%= number_to_percentage(@latest_metric.memory_usage_percent, precision: 1) %></p>
      <p class="text-sm text-gray-500 mt-2"><%= number_to_human_size(@latest_metric.memory_used_mb * 1024 * 1024) %> / <%= number_to_human_size(@latest_metric.memory_total_mb * 1024 * 1024) %></p>
    </div>
  <% end %>
</div>

<div class="bg-white rounded-lg shadow p-6 mb-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-semibold">Metrics</h3>
    <%= link_to "View Detailed Charts →", metrics_server_path(@server), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
  <p class="text-gray-600">View detailed time-series charts for CPU, Memory, Disk, and Network metrics.</p>
</div>

<% if @active_alerts.any? %>
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">Active Alerts</h3>
    <div class="space-y-3">
      <% @active_alerts.each do |alert| %>
        <div class="flex items-center justify-between p-3 bg-red-50 rounded border border-red-200">
          <div class="flex-1">
            <div class="flex items-center space-x-2">
              <%= severity_badge(alert.severity) %>
              <span class="font-medium"><%= alert.alert_type.titleize %></span>
            </div>
            <p class="text-sm text-gray-600 mt-1"><%= alert.message %></p>
          </div>
          <%= link_to "View", alert, class: "px-3 py-1 bg-white border border-gray-300 rounded hover:bg-gray-50" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
