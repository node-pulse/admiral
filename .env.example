# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nodepulse

# Valkey Configuration
VALKEY_PASSWORD=valkeypassword

# Ory Kratos Configuration
KRATOS_LOG_LEVEL=info

# Backend Configuration (Go-Gin)
BACKEND_PORT=8080
GIN_MODE=debug
JWT_SECRET=your-secret-key-change-in-production

# Frontend Configuration (Next.js)
# Public URLs (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_KRATOS_URL=http://localhost:4433

# Better Auth Configuration
BETTER_AUTH_SECRET=your-better-auth-secret-change-in-production
BETTER_AUTH_URL=http://localhost:3000

# Database URL for Better Auth (Next.js)
DATABASE_URL=postgres://postgres:postgres@postgres:5432/nodepulse?sslmode=disable&search_path=better_auth
